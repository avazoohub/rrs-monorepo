{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/app*": [
        "./app/*"
      ],
      "@/data/*": [
        "./app/data/*"
      ],
      "@/components/*": [
        "./app/components/*"
      ],
      "@/store/*": [
        "./app/lib/zustand/store/*"
      ],
      "@/lib/*": [
        "../shared/lib/*"
      ],
      "@/utils/*": [
        "../shared/utils/*"
      ],
      "@/types/*": [
        "../shared/types/*"
      ],
    }
  },
  "include": [
    "src",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}